<h1>New Task</h1>

<%= form_with model: @task do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :details %>
  <%= f.text_field :details %>
  <%= f.check_gox :completed %>
  <%= f.label :completed, "Completed ?" %>
  <%= f.submit %>
<% end %>

<%= link_to 'Back to list', tasks_path %>
