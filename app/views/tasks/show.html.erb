<h1><%= @task.title %></h1>
<h2><%= @task.details %></h2>
<h2><%= @task.completed ? "Task Completed" : "Task not Completed" %></h2>

<%= link_to 'Back to list', tasks_path %>
<%= link_to 'Edit a task', tasks_edit_path(@task) %>
<%= link_to 'Delete a task', task_delete_path(@task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
